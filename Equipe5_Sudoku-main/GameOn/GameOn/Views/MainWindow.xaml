<Window x:Class="GameOn.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOn.Views"
        xmlns:sudoku="clr-namespace:GameOn.Views.Sudoku"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodel="clr-namespace:GameOn.ViewModels"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="500" MinWidth="900" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <!--les vue ici -->
            <local:LoginV x:Name="LoginV" Visibility="Visible"/>
            <sudoku:SudokuV x:Name="SudokuV" Visibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
