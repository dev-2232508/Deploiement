<UserControl x:Class="GameOn.Views.LoginV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodel="clr-namespace:GameOn.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodel:LoginVM}"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Form Card -->
        <materialDesign:Card Grid.Row="1" Grid.Column="1"
                             Padding="30"
                             Margin="10"
                             Background="White"
                             UniformCornerRadius="12">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Header -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Hourglass Unlimited"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                               VerticalAlignment="Center"/>
                    <Image Source="/Media/Images/logo.png"
                           Stretch="Uniform"
                           VerticalAlignment="Center"
                           Width="80"
                           Height="80"
                           Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Username Field -->
                <TextBox materialDesign:HintAssist.Hint="Courriel"
                         Margin="0,5"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding Email}"
                         Width="250"
                         />

                <!-- Password Field -->
                <PasswordBox materialDesign:HintAssist.Hint="Mot de passe"
                     Margin="0,10,0,5"
                    Width="250"
                    PasswordChanged="PasswordBox_PasswordChanged"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>

                <!-- Login Button -->
                <Button Content="Connexion"
                        Margin="0,15,0,5"
                        Width="250"
                        Height="40"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Foreground="Black"
                        Command="{Binding LoginCommand}"/>

                <!-- Notification Label -->
                <TextBlock Text="{Binding Notification}"
                           Foreground="Red"
                           FontWeight="SemiBold"
                           FontSize="14"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>